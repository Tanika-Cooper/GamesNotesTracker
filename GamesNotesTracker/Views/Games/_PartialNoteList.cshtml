@model IEnumerable<NoteContent>

<div class="col p-0">
    @if (Model.Count() == 0)
    {
        <p class="color-text-primary-3 m-3"> This list is empty.</p>
    }


    @if (Model.Count() != 0)
    {
        <div class="row d-flex justify-content-between border rounded color-text-primary-3 mx-2 mt-2 border-color-primary-1">
            <div class="col-4 d-flex align-items-center justify-content-center border-right bg-color-background-primary-0 color-text-primary-3 border-color-primary-1">
                <span>
                    Title
                </span>
            </div>
            <div class="col-2 d-flex align-items-center justify-content-center bg-color-background-primary-0 color-text-primary-3 border-color-primary-1">
                <span>
                    Contents
                </span>
            </div>
        </div>
        @foreach (var item in Model)
        {
            <div class="row d-flex justify-content-between m-2 border rounded color-text-primary-3 ">
                <input type="hidden" value="@item.NoteContentId" />
                <div class="col-4 d-flex align-items-center border-right">
                    <span>
                        @item.NoteName
                    </span>
                </div>
                <div class="col-2 d-flex align-items-center justify-content-end">
                    <span>
                        @item.NoteContents
                    </span>
                </div>
            </div>
        }
    }
    <div class="row d-flex justify-content-between border rounded color-text-primary-3 my-2 mx-2 border-color-primary-1">
        <div class="col d-flex align-items-center justify-content-start bg-color-background-primary-0 color-text-primary-3 border-color-primary-1">
            <span class="color-text-primary-3" id="DateCreatedLabel">
                Date List Created:
            </span>
        </div>
    </div>
</div>


